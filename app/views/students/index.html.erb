<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
          <td><%= link_to 'Show', student, class: 'btn btn-secondary' %></td>
       
         <td><%= link_to 'Edit', edit_student_path(student), class:'btn btn-primary'%></td>
        
         <td><%= link_to 'Destroy', student, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
